<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
	android:orientation="vertical"
    style="@style/box"
    android:paddingTop="@dimen/headerHeightCollapsed"
    tools:context=".PlansFragment" 
    >
	<ScrollView 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    >
	    <LinearLayout
	        android:orientation="vertical" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        >
	    	<RelativeLayout style="@style/item.nopadding">
	           	<RadioButton android:id="@+id/radioPlan1"
		       	    style="@style/plan"
		       	    android:tag="1"
		            />
	           	<TextView android:id="@+id/txtPrice1" 
		       	    style="@style/price"
		       	    android:layout_alignBaseline="@id/radioPlan1"
	           	    />
	        </RelativeLayout>
	    	<RelativeLayout style="@style/item.nopadding">
	       		<RadioButton android:id="@+id/radioPlan2"
		       	    style="@style/plan"
		       	    android:tag="2"
	    	        />
	           	<TextView android:id="@+id/txtPrice2" 
		       	    style="@style/price"
		       	    android:layout_alignBaseline="@id/radioPlan2"
	           	    />
	       	</RelativeLayout>
	    	<RelativeLayout style="@style/item.nopadding">
	        	<RadioButton android:id="@+id/radioPlan3"
		       	    style="@style/plan"
		       	    android:tag="3"
		            />
	           	<TextView android:id="@+id/txtPrice3" 
		       	    style="@style/price"
		       	    android:layout_alignBaseline="@id/radioPlan3"
	           	    />
	        </RelativeLayout>
	    	<RelativeLayout style="@style/item.nopadding">
	    		<RadioButton android:id="@+id/radioPlan4"
		       	    style="@style/plan"
		       	    android:tag="4"
		            />
	           	<TextView android:id="@+id/txtPrice4" 
		       	    style="@style/price"
		       	    android:layout_alignBaseline="@id/radioPlan4"
	           	    />
	        </RelativeLayout>
	
		    <TextView android:id="@+id/txtMessage"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="4dp"
		        android:layout_centerInParent="true"
		        android:autoLink="web"
		        />
	    		    	    
	    </LinearLayout>
	    
	</ScrollView>

    <Button
        android:id="@+id/btnPay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:text="@string/pay"        
        android:enabled="false" 
        />
</LinearLayout>